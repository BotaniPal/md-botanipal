<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsActivity">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorOnPrimary"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Language Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <!-- Language Switch -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="Language"
                android:fontFamily="@font/plusjakartasans"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/translate_fill" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/language_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="EN"
                android:textOff="ID"
                android:showText="true" />
        </LinearLayout>

        <!-- Dark Mode Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dark Mode"
                android:fontFamily="@font/plusjakartasans"
                android:gravity="center_vertical"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/sun_fill"
                android:drawablePadding="10dp"/>

            <!-- Dark Mode Switch -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/dark_mode_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="On"
                android:textOff="Off"
                android:showText="true" />
        </LinearLayout>

        <!-- Payment Method Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Payment Method"
                android:fontFamily="@font/plusjakartasans"
                android:gravity="center_vertical"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/credit_card_fill"
                android:drawablePadding="10dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/caret_right"
                android:contentDescription="Forward" />
        </LinearLayout>

        <!-- Be an Expert Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Be an Expert"
                android:fontFamily="@font/plusjakartasans"
                android:gravity="center_vertical"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/seal_check_fill"
                android:drawablePadding="10dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/caret_right"
                android:contentDescription="Forward" />
        </LinearLayout>

        <!-- Help Center Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Help Center"
                android:fontFamily="@font/plusjakartasans"
                android:gravity="center_vertical"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/question_fill"
                android:drawablePadding="10dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/caret_right"
                android:contentDescription="Forward" />
        </LinearLayout>

        <!-- Logout Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Logout"
                android:fontFamily="@font/plusjakartasans"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/sign_out_fill"
                android:drawablePadding="10dp"/>
        </LinearLayout>

        <!-- Delete Account Setting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete Account"
                android:fontFamily="@font/plusjakartasans"
                android:textSize="18sp"
                android:gravity="center_vertical"
                app:drawableStartCompat="@drawable/trash_fill"
                android:drawablePadding="10dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
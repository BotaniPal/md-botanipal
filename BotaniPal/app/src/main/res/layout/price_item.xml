<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|start"
    android:layout_margin="16dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@android:color/transparent"
    android:foregroundTint="@android:color/transparent"
    card_view:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_commodity_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/bawang"
            android:contentDescription="Commodity Photo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center|start">

            <TextView
                android:id="@+id/tv_commodity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                tools:text="Bawang" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/tv_commodity_price_rp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp "
                    android:textSize="18sp"
                    android:textColor="?android:attr/textColorPrimary" />
                <TextView
                    android:id="@+id/tv_commodity_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="18sp"
                    android:textColor="?android:attr/textColorPrimary"
                    tools:text="10.000" />
                <TextView
                    android:id="@+id/tv_commodity_price_kg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="18sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:text="/kg" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/icon"
        android:layout_gravity="bottom"/>
</androidx.cardview.widget.CardView>
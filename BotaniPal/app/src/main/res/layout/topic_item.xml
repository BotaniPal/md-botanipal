<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|start"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:foregroundTint="?attr/colorSecondary">

    <LinearLayout
        android:id="@+id/topicCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comodity_chip"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/topicTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How to plant Corn"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/topicDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi, I wanna ask about plant corn. Iâ€™ve heard from my friends that i should bla bla bla. What r u think guys?"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>